<selector xmlns:android="http://schemas.android.com/apk/res/android">
       <!-- Focused state -->
       <item android:state_focused="true">
              <shape>
                     <!-- <solid android:color="#FF0000" /> Border color when focused -->
                     <stroke
                         android:width="1dp"
                         android:color="@color/colorPurple" /> <!-- Border width and color when focused -->
                     <corners android:radius="8dp" /> <!-- Border corner radius -->
              </shape>
       </item>
       <!-- Default (unfocused) state -->
       <item>
              <shape>
                     <!--  <solid android:color="#CCCCCC" />  Border color when unfocused -->
                     <stroke
                         android:width="1dp"
                         android:color="#AAA7AA" /> <!-- Border width and color when unfocused -->
                     <corners android:radius="8dp" /> <!-- Border corner radius -->
              </shape>
       </item>
</selector>